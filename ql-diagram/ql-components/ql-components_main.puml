        $qlNoteRel(nTransportGuildRank, [TransportGuildRank], ".l.", $note)
'         note as ncTransportGuildRank
' <code>
'   !include code/TransportGuildRankCode.json
' </code>
'         end note
'         ncTransportGuildRank .l. nTransportGuildRank

      component "[[ql-components_main_cargoroutestrategy.png {go to CargoRouteStrategy diagram} CargoRouteStrategy]]" as CargoRouteStrategy
        !$note = "<img:./../../out/ql-code/ql-code_cargoroutestrategycode.png{scale=1}>"
        $qlNoteRel(nCargoRouteStrategy, [CargoRouteStrategy], ".l.", $note)
