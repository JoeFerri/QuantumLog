' <code>
'   !include code/CargoRouteStrategyCode.json
' </code>
'         end note
'         ncCargoRouteStrategy .l. nCargoRouteStrategy
  }

}

' top to bottom direction
StartingEndingPoint -[hidden]-> LimitsStrategy
LimitsStrategy -[hidden]-> ShipStrategy

