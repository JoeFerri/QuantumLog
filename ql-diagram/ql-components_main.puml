'
' StrategyBoard
'
'''_______________________________________________
@startuml ql-components_main_strategyboard
!$title = "StrategyBoard"
!$author = "Giuseppe Ferri"

!include templates/ql-template-main.iuml
!include templates/styles/ql-style-lib.iuml

rectangle r <<frame>> {

  component [StrategyBoard] {
    port StrategyBoardOut1
    port StrategyBoardOut2

      component [CargoGrade]
        !$note = "<img:out/ql-diagram/CargoGradeCode.png{scale=1}>"
        $qlNoteRel(nCargoGrade, [CargoGrade], ".l.", $note)
        note as ncCargoGrade
<code>
  !include code/CargoGrade-note.json
</code>
        end note
        ncCargoGrade .l. nCargoGrade

      component [TransportGuildRank]
        !$note = ""
        $qlNoteRel(nTransportGuildRank, [TransportGuildRank], ".", $note)

      component [StartingEndingPoint]
        !$note = ""
        $qlNoteRel(nStartingEndingPoint, [StartingEndingPoint], ".", $note)

      component [LimitsStrategy]
        !$note = ""
        $qlNoteRel(nLimitsStrategy, [LimitsStrategy], ".", $note)

      component [ShipStrategy]
        !$note = ""
        $qlNoteRel(nShipStrategy, [ShipStrategy], ".", $note)

      component [CargoRouteStrategy]
        !$note = ""
        $qlNoteRel(nCargoRouteStrategy, [CargoRouteStrategy], ".", $note)



  }

}

' top to bottom direction
TransportGuildRank -[hidden]u-> CargoGrade
CargoGrade -[hidden]u-> StartingEndingPoint
StartingEndingPoint -[hidden]u-> LimitsStrategy
LimitsStrategy -[hidden]u-> ShipStrategy
ShipStrategy -[hidden]u-> CargoRouteStrategy

@enduml

